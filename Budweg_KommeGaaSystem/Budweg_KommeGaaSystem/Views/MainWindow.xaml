<Window x:Class="Budweg_KommeGaaSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Budweg_KommeGaaSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" 
                   Text="Velkommen til Budweg" Foreground="#00AC58" FontSize="35" FontWeight="Bold"
                   HorizontalAlignment="Center"/>

        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Rectangle Grid.Row="0" Grid.RowSpan="2" Fill="#00AC58" RadiusX="50" RadiusY="50"/>
            <Border Margin="50, 30, 50, 0" BorderThickness="1" BorderBrush="#3D3D41" Background="LightGray" CornerRadius=" 8">
                <TextBlock Foreground="#3D3D41" Text="Indtast medarbejdernummer" FontSize="20" TextAlignment="Center" TextWrapping="Wrap"/>
            </Border>
            <Border Grid.Row="1" Margin="50, 15, 50, 45" Padding="5,2,5,2" BorderThickness="1" BorderBrush="#3D3D41" Background="White" CornerRadius=" 8">
                <TextBox Foreground="#3D3D41" Text="123456789" FontSize="18" TextAlignment="Center" TextWrapping="Wrap" BorderThickness="0"/>
            </Border>

            <Rectangle Grid.Row="3" Fill="#00AC58" RadiusX="50" RadiusY="50"/>
            <Border Grid.Row="3" Margin="50, 60, 50, 60" BorderThickness="1" BorderBrush="#3D3D41" Background="LightGray" CornerRadius=" 8">
                <TextBlock Foreground="#3D3D41" Text="Tak, du er nu tjekket ind/ud af [bygning]" FontSize="20" TextAlignment="Center" TextWrapping="Wrap"/>
            </Border>
        </Grid>

        <GridSplitter Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" Width="2" Background="#3D3D41" IsEnabled="False" Margin="0,10,0,10"/>

        <Grid Grid.Column="2" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>

            <Rectangle Grid.ColumnSpan="3" Grid.RowSpan="3" Fill="#00AC58" RadiusX="50" RadiusY="50"/>

            <Border Margin="20, 25, 20, 0" BorderThickness="1" BorderBrush="#3D3D41" Background="LightGray" CornerRadius=" 8">
                <TextBlock Foreground="#3D3D41" Text="Vælg byning" FontSize="20" TextAlignment="Center" TextWrapping="Wrap"/>
            </Border>

            <Border Grid.Row="2" Margin="20, 10, 20, 20" Padding="5,5,5,5" BorderThickness="1" BorderBrush="#3D3D41" Background="White" CornerRadius=" 8">
                <ListBox>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=SelectedBuilding}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <Border Grid.Column="2" Margin="20, 25, 20, 0" Padding="5,5,5,5" BorderThickness="1" BorderBrush="#3D3D41" Background="LightGray" CornerRadius=" 8">
                <TextBlock Foreground="#3D3D41" Text="Medarbejdere i [bygning]" FontSize="20" TextAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
            </Border>

            <Border Grid.Column="2" Grid.Row="2" Margin="20, 10, 20, 20" Padding="5,5,5,5" BorderThickness="1" BorderBrush="#3D3D41" Background="White" CornerRadius=" 8">
                <ListView>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=SelectedEmployee}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>

        </Grid>


    </Grid>
</Window>
